<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="URL Shrinker App using express.js, mongodb and ejs"
    />
    <meta name="author" content="Tri Rizeki Rifandani" />
    <title>URL Shortener | Home</title>
    <!--     Fonts and icons     -->
    <link
      rel="stylesheet"
      type="text/css"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons"
    />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"
    />
    <!-- CSS -->
    <link href="css/material-kit.css?v=2.0.7" rel="stylesheet" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- favicon -->
    <link
      rel="icon"
      type="image/png"
      href="images/favicon-32x32.png"
      sizes="32x32"
    />
    <link
      rel="icon"
      type="image/png"
      href="images/favicon-16x16.png"
      sizes="16x16"
    />
    <link rel="shortcut icon" href="images/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  </head>

  <body class="profile-page sidebar-collapse">
    <nav
      class="navbar navbar-transparent navbar-color-on-scroll fixed-top navbar-expand-lg"
      color-on-scroll="20"
      id="sectionsNav"
    >
      <div class="container">
        <div class="navbar-translate">
          <a class="navbar-brand" href="#">
            <img src="images/logohub.png" style="width: 150px;" />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <i class="material-icons">layers</i> Home
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div
      class="page-header header-filter"
      data-parallax="true"
      style="background-image: url('https://i.ibb.co/mtPVFqG/url.jpg');"
    >
      <div class="container">
        <div class="row">
          <div class="col-md-8 ml-auto mr-auto">
            <div class="brand">
              <h1 class="title text-white text-center">URL Shrinker</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="main main-raised">
      <div class="profile-content">
        <div class="container">
          <div class="description text-center tab-space">
            <div class="container">
              <div class="row">
                <div class="col-lg-12 text-center mt-3">
                  <form action="/shortUrls" method="post" class="row">
                    <label for="fullUrl" class="sr-only">URL</label>
                    <div class="col-lg-12">
                      <div class="input-group">
                        <input
                          required
                          id="fullUrl"
                          name="fullUrl"
                          type="url"
                          class="form-control"
                          placeholder="Enter your URL"
                        />
                        <div class="input-group-append">
                          <button class="btn-fab btn-primary" type="submit">
                            Shrink
                          </button>
                        </div>
                      </div>
                    </div>
                  </form>

                  <div class="mt-3">
                    <table class="table table-striped table-condesed">
                      <thead>
                        <tr>
                          <th>Full Url</th>
                          <th>Short Url</th>
                          <th>Clicks</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% shortUrls.forEach(shortUrl => { %>
                        <tr>
                          <td>
                            <a href="<%= shortUrl.full %> ">
                              <%= shortUrl.full %>
                            </a>
                          </td>
                          <td>
                            <a href="<%= shortUrl.short %>"
                              ><%= shortUrl.short %></a
                            >
                          </td>
                          <td><a><%= shortUrl.clicks %> </a></td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer footer-default">
      <div class="container">
        <nav class="float-left">
          <ul>
            <li>
              <a href="https://www.rifandani.educationhost.cloud/">
                Laravel Projects
              </a>
            </li>
            <li>
              <a href="https://pusher-polling-app.herokuapp.com/">
                Poll App
              </a>
            </li>
            <li>
              <a href="https://agile-island-52063.herokuapp.com/">
                Weather App
              </a>
            </li>
          </ul>
        </nav>
        <div class="copyright float-right">
          &copy;
          <script>
            document.write(new Date().getFullYear());
          </script>
          , made with <i class="material-icons">favorite</i> by
          <a href="https://www.rifandani.github.io/" target="_blank"
            >Rifandani</a
          >
        </div>
      </div>
    </footer>

    <!--   Core JS Files   -->
    <script src="js/core/jquery.min.js" type="text/javascript"></script>
    <script src="js/core/popper.min.js" type="text/javascript"></script>
    <script
      src="js/core/bootstrap-material-design.min.js"
      type="text/javascript"
    ></script>
    <script src="js/plugins/moment.min.js"></script>
    <!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
    <script
      src="js/plugins/bootstrap-datetimepicker.js"
      type="text/javascript"
    ></script>
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="js/plugins/nouislider.min.js" type="text/javascript"></script>
    <!--  Google Maps Plugin    -->
    <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
    <script src="js/material-kit.js" type="text/javascript"></script>
  </body>
</html>
